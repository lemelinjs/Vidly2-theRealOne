@model IEnumerable< Vidly2.Models.Movie >

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Films</h2>
<table class="table table-bordered">
    <thead>
        <th>
            Titre
        </th>
        <th>
            Genre
        </th>
    </thead>

@foreach (var Movie in Model)
{
    <tr>
        <td>@Html.ActionLink(@Movie.Name,"Details", "Movies", new { id=Movie.Id },null )</td>
        <td>@Movie.Genre </td>
    </tr>
}

</table>
